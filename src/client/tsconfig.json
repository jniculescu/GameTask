{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "typeRoots": ["node_modules/pixi.js"],
        "types": ["pixi.js"],
        "outDir": "../../dist/client",
        "baseUrl": ".",
        "paths": {
            "/build/three.module.js": ["../../node_modules/three/src/Three"],
            "/jsm/*": ["../../node_modules/three/examples/jsm/*"],
            "/pixi.js/*": ["../../node_modules/pixi.js/*"],
            "/pixi.js": ["../../node_modules/pixi.js/lib/pixi.js"]
